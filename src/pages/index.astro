---
import PageLayout from "../layouts/PageLayout.astro";
import LastNotes from "../features/note/components/LastNotes.astro";
import NoteTags from "../features/note/components/NoteTags.astro";
import NoteList from "../features/note/components/NoteList.astro";
---

<PageLayout class="main-page" title="Главная">
  <h1 class="main-page__title main-page__title_sr-only">Домашняя страница</h1>
  <aside>
    <h2>Новые заметки</h2>
    <LastNotes />
  </aside>
  <aside>
    <h2>Мои заметки</h2>
    <NoteList />
  </aside>
  <aside>
    <h2>Теги</h2>
    <NoteTags />
  </aside>
</PageLayout>

<style>
  .main-page__title_sr-only {
    position: absolute;
    width: 1px;
    height: 1px;
    padding: 0;
    margin: -1px;
    overflow: hidden;
    clip: rect(0, 0, 0, 0);
    white-space: nowrap;
    border: 0;
  }
</style>
