---
import type { HTMLAttributes } from "astro/types";
import { getCollection } from "astro:content";
import PostCard from "./PostCard.astro";

const posts = (await getCollection("posts", ({ data }) => !!data.pinned)).sort(
  (a, b) => {
    return b.data.date.getTime() - a.data.date.getTime();
  },
);

interface Props extends HTMLAttributes<"ul"> {}

const { class: className, ...attrs } = Astro.props;
---

<ul class:list={["pinned-posts", className]} {...attrs}>
  {posts.map((post) => <PostCard class="pinned-posts__card" post={post} />)}
</ul>

<style>
  .pinned-posts {
    display: flex;
    flex-direction: row;
    flex-flow: wrap;
    gap: 1rem;
    list-style: none;
    margin: 0;
    padding: 0;
  }

  .pinned-posts__card {
    flex: 1 0 270px;
    width: 100%;
  }
</style>
