---
import type { HTMLAttributes } from "astro/types";
import "../styles/fonts.css";
import "../styles/global.css";

interface Props extends HTMLAttributes<"html"> {
  title: string;
}

const { title, class: className, ...attrs } = Astro.props;
---

<!doctype html>
<html class:list={["root-layout", className]} lang="ru" {...attrs}>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="sitemap" href="/sitemap-index.xml" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title} â€” @mukhindev</title>
    <script is:inline src="/theme.js"></script>
  </head>
  <body>
    <slot />
  </body>
</html>
