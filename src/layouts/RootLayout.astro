---
/**
  Корневая разметка. Включая html и body.
  Для определения темы используется <script is:inline>,
  чтобы избежать мерцания при первой загрузке.
  */

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="ru">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title} — @mukhindev</title>
    <script is:inline src="/theme.js"></script>
  </head>
  <body>
    <slot />
  </body>
</html>

<style is:global>
  :root {
    font-size: 16px;
    font-family: system-ui, Avenir, Helvetica, Arial, sans-serif;
    line-height: 1.5;
    font-weight: 400;
    font-synthesis: none;
    text-rendering: optimizeLegibility;
    -webkit-font-smoothing: antialiased;
    -moz-osx-font-smoothing: grayscale;
  }
</style>

<style>
  html {
    color-scheme: light;
    color: #213547;
    background-color: #ffffff;
  }

  html.dark {
    color-scheme: dark;
    color: rgba(255, 255, 255, 0.87);
    background-color: #242424;
  }

  html,
  body {
    margin: 0;
    width: 100%;
    height: 100%;
  }
</style>
